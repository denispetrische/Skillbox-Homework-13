<Window x:Class="Skillbox_Homework_13._1.Displays.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skillbox_Homework_13._1.Displays"
        mc:Ignorable="d"
        Title="NotificationWindow" WindowState="Maximized"  MinHeight="450" Height="450" MinWidth="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="387*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="759*"/>
            <ColumnDefinition Width="28*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="1" Grid.Row="1" Name="listView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="События:" DisplayMemberBinding="{Binding}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
